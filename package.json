{
  "name": "bigfishtv-turret",
  "version": "3.2.0",
  "description": "A responsive frontend framework build with Less to normalize styles for default HTML elements",
  "homepage": "http://turret.bigfish.tv",
  "author": "Bigfish.tv",
  "contributors": [
    {
      "name": "Scott de Jonge",
      "email": "scottdj@bigfish.tv",
      "url": "http://scottdejonge.com"
    },
    {
      "name": "Gökay Gürcan",
      "email": "info@gokaygurcan.com",
      "url": "http://www.gokaygurcan.com/"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bigfishtv/turret"
  },
  "bugs": {
    "url": "https://github.com/bigfishtv/turret/issues"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "less",
    "sass",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "directories": {
    "dist": "./dist",
    "less": "./src/less",
    "sass": "./src/sass"
  },
  "dependencies": {
    "less": "^2.5.3",
    "minifier": "^0.7.1",
    "node-sass": "^3.3.3"
  },
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-cssmin": "^0.14.0",
    "grunt-contrib-less": "^1.0.1",
    "grunt-contrib-sass": "^0.9.2",
    "grunt-contrib-watch": "^0.6.1",
    "matchdep": "^1.0.0",
    "watch": "^0.16.0"
  },
  "scripts": {
    "build:less": "lessc src/less/turret.less > dist/turret.css",
    "build:sass": "node-sass --include-path scss src/sass/turret.scss dist/turret.css",
    "minify": "minify --output dist/turret.min.css dist/turret.css",
    "watch": "npm run watch:less && npm run watch:sass",
    "watch:less": "watch \"npm run build:less\" \"src/less\"",
    "watch:sass": "watch \"npm run build:sass\" \"src/sass\"",
    "postversion": "npm run docs:compile && echo \"Run 'npm publish ./' if you want this to be published\"",
    "predocs:compile": "pushd ../turret_gh-pages && rm -rf docs dist examples *.html",
    "docs:compile": "wget -rkE --no-host-directories --no-verbose --no-cache -P ../turret_gh-pages/ http://dev.turret/",
    "postdocs:compile": "echo WARNING: MAKE SURE YOU COMMIT AND PUSH GH-PAGES!!"
  }
}
